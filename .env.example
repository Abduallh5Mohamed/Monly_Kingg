# Environment Configuration Template
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/accountsstore

# JWT Configuration - MUST be changed in production!
JWT_SECRET=generate_a_strong_random_secret_key_at_least_256_bits_long
JWT_ACCESS_EXPIRES=15m
REFRESH_TOKEN_EXPIRES_DAYS=30

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Your App Name <your-email@gmail.com>"

# Cookie Names
ACCESS_TOKEN_COOKIE_NAME=access_token
REFRESH_TOKEN_COOKIE_NAME=refresh_token
CSRF_COOKIE_NAME=xsrf_token

# CORS Configuration (production only)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
BCRYPT_SALT_ROUNDS=12